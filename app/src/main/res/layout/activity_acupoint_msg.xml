<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_acupoint_msg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.hg.jacob.lvdao.activity.AcupointMsgActivity">


    <!--标题栏-->
    <RelativeLayout
        android:layout_alignParentTop="true"
        android:background="#61b2f6"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <LinearLayout
            android:id="@+id/back_btn"
            style="@style/top_btn"
            android:layout_alignParentLeft="true"
            android:gravity="center|left"
            android:paddingLeft="15dp"
            >
            <TextView
                android:id="@+id/back_text"
                style="@style/top_btn_text"/>
        </LinearLayout>
        <TextView
            android:id="@+id/title"
            android:textColor="#f1f1f1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="3"
        android:orientation="vertical"
        android:layout_height="0dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/acupoint"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="0dp">

        <TextView
            android:text="定位"
            android:layout_margin="10dp"
            android:textColor="@color/btn_press"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="@color/txt_color_3"
            android:text="位于膝下三寸处"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="0dp">

        <TextView
            android:text="取穴方法"
            android:layout_margin="10dp"
            android:textColor="@color/btn_press"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="@color/txt_color_3"
            android:text="位于膝下三寸处"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="3"
        android:orientation="vertical"
        android:layout_height="0dp">

        <TextView
            android:text="主治"
            android:layout_margin="10dp"
            android:textColor="@color/btn_press"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="@color/txt_color_3"
            android:text="位于膝下三寸处"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</LinearLayout>
